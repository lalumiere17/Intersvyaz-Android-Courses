<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

<ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/main_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="MY FIRST HOMETASK"
        android:textAlignment="center"
        android:textColor="#fef9f3"
        android:textSize="25pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/buttonBattery"
        android:layout_width="75pt"
        android:layout_height="20pt"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:background="#563b2a"
        android:text="Battery"
        android:textAlignment="center"
        android:textColor="#fef9f3"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/buttonLocation"/>

    <Button
        android:id="@+id/buttonLocation"
        android:layout_width="75pt"
        android:layout_height="20pt"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:background="#563b2a"
        android:text="Location"
        android:textAlignment="center"
        android:textColor="#fef9f3"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/buttonBattery"/>

    <Button
        android:id="@+id/buttonAPI"
        android:layout_width="75pt"
        android:layout_height="20pt"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:background="#563b2a"
        android:text="API"
        android:textAlignment="center"
        android:textColor="#fef9f3"
        android:textSize="10pt"
        app:layout_constraintBottom_toTopOf="@id/buttonBattery"
        app:layout_constraintLeft_toLeftOf="@id/buttonBattery"
        />

</android.support.constraint.ConstraintLayout>